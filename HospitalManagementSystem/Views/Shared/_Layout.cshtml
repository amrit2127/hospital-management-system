<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HospitalManagementSystem</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/HospitalManagementSystem.styles.css" asp-append-version="true" />

    @*CSS REF*@
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.16/css/jquery.dataTables.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.12.1/jquery-ui.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" />

</head>
@* <body style="background-image:linear-gradient(rgba(255,255,255,.5),rgba(255,255,255,.5)),url(../../images/encounters.jpg); background-size: cover; 
background-position: top;"> *@


        <body style="background-image: linear-gradient(rgba(255, 255, 255, 0.5), rgba(0, 255, 255, 0.5)),url(../../images/encounters.jpg);
                background-size: cover; background-position: top; content-visibility: visible;">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-primary border-bottom box-shadow mb-3">
            <div class="container-fluid">
               @*  <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">HospitalManagementSystem</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button> *@
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item col-1">
                            <img width="70%" height="100%" src="~/images/hospitals.jpg" />
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Hospitals List</a>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" asp-action="Index" asp-controller="HospitalTypes" asp-area="Admin">Types of Hospitals</a>
                                <a class="dropdown-item" asp-action="Index" asp-controller="Hospital" asp-area="Admin">List of Hospitals</a>
                            </div>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Hospital Management</a>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" asp-action="Index" asp-controller="Department" asp-area="Admin">Departments or Wards</a>
                                <a class="dropdown-item" asp-action="Index" asp-controller="Doctor" asp-area="Admin">Doctors</a>

                            </div>
                        </li>

                    </ul>
                    <partial name="_LoginPartial" />
                </div>
                </div>
      
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <br/>
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    

    <div class="row">
        <marquee behavior="scroll" direction="left" class="text-center fw-bold"
                 style="color:black; font-family:Georgia Extrabold,sans-serif;font-size:2em;">
            Welcome to Healthcare-Information-Management-System
        </marquee>
    </div>

    <footer class="border-top footer text-muted ">
        <div class="container text-white">
            &copy; Copyright © 2024 - HospitalManagementSystem - <a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-white">Privacy</a>
         <br/> Powered By: Amritjyot Kaur
            <br/>
           @*  <a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-white">Privacy</a> *@
        </div>
    </footer>

    @* <footer class="border-top footer text-muted bg-primary p-5">
        <div class="container text-white">
            &copy; 2024 - HospitalManagementSystem - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer> *@

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @*JS REF*@
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.12.1/jquery-ui.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.16/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    <script src="https://kit.fontawesome.com/e19c476714.js"></script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
