@model HospitalManagementSystem.Models.HospitalType
@{
    ViewData["Title"] = "Upsert";
    var title = Model.Id != 0 ? "Edit Type" : "New Type";
    var SaveUpdate = Model.Id != 0 ? "Update" : "Save";
}

<form method="post">
    <div class="row">
        <div class="col-10 text-lg-start fw-bold bottom">
            <h1 class="text-black fw-bold text-lg-start ">@title</h1>
        </div>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-8">
            <div class="form-group row p-2 m-2 container border-2">
                <div class="col-3">
                    <label class="text-dark fw-bold" asp-for="@Model.Type">Type</label>
                </div>
                <div class="col-8">
                    <input asp-for="@Model.Type" class="form-control" />
                    <span asp-validation-for="@Model.Type" class="text-danger"></span>
                </div>
            </div>

            @* <div class="form-group row p-2 m-2">
                <div class="col-8 offset-4">
                    @if (Model.Id != 0)
                    {
                        <partial name="_EditAndBackToListButton" />
                    }
                    else
                    {
                        <partial name="_CreateAndBackToListButton" />
                    }
                </div>
            </div> *@

            <div class="form-group row p-2 m-2">
            <div class="col-4 ">
            <button type="submit" class="btn btn-info form-control">
            @SaveUpdate
            </button>
            </div>
            <div class="col-4 ">
            <a asp-action="Index" class="btn btn-success form-control">
            Back To List
            </a>
            </div>
            </div>

        </div>
    </div>
</form>


